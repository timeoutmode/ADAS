<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--  Regular -->
    <font
        android:font="@font/sf_pro_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/sf_pro_regular"
        app:fontStyle="normal"
        app:fontWeight="400"/>

    <!--  Italic -->
    <font
        android:font="@font/sf_pro_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/sf_pro_italic"
        app:fontStyle="italic"
        app:fontWeight="400"/>

    <!--  Bold -->
    <font
        android:font="@font/sf_pro_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/sf_pro_bold"
        app:fontStyle="normal"
        app:fontWeight="700"/>

    <!--  Bold | Italic -->
    <font
        android:font="@font/sf_pro_bolditalic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/sf_pro_bolditalic"
        app:fontStyle="italic"
        app:fontWeight="700"/>

</font-family>