<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orientation.FragmentOneActivity">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardBackgroundColor="#9A1CC6"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.83" />

                <!--<RadioButton
                    android:id="@+id/choice1"
                    android:layout_width="414dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="188dp"
                    android:background="@color/quantum_yellow"
                    android:padding="8dp"
                    android:text="Yes"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/question" />-->


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="352dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="92dp"
                    android:text="What is the day of the week?"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#F9F9F9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.387"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/dayOfWeek"
                    android:layout_width="340dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="168dp"
                    android:background="@drawable/main_edit_text"
                    android:drawableEnd="@drawable/ic_dropdown_arrow"
                    android:elevation="10dp"
                    android:ems="10"
                    android:entries="@array/week"
                    android:focusable="false"
                    android:hint="Week"
                    android:inputType="textPersonName"
                    android:paddingEnd="10dp"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="11dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/dayOfWeek"
                    app:layout_constraintEnd_toEndOf="@+id/dayOfWeek"
                    app:layout_constraintTop_toTopOf="@+id/dayOfWeek" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>